<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DimensionSize_MatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="DimensionSize_WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DimensionSize_MatchParent_WrapContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextDescription">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextDate">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">3</item>
    </style>

    <!--Detail-->

    <!--Favorite-->
    <style name="FavoriteButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/favorite_button</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_alignTop">@+id/overlay</item>
        <item name="android:layout_marginStart">161dp</item>
        <item name="android:layout_marginTop">236dp</item>
        <item name="android:layout_toEndOf">@+id/cover_photo</item>
        <item name="android:background">@drawable/favorite_button_shape</item>
        <item name="android:drawableStart">@drawable/ic_whatshot_black_24dp</item>
    </style>


    <!--Rating-->
    <style name="MovieCover">
        <item name="android:layout_width">96dp</item>
        <item name="android:layout_height">135dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">148dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@drawable/cover_shape</item>
        <item name="android:layout_alignTop">@+id/backdrop_photo</item>
        <item name="android:layout_alignStart">@+id/backdrop_photo</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorGrey</item>
        <item name="colorControlActivated">@color/colorGolden</item>
    </style>




</resources>
